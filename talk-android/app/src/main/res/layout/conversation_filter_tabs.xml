<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical">

    <com.google.android.material.chip.Chip
        android:id="@+id/tab_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/all"
        android:textSize="13sp"
        android:minHeight="28dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:chipCornerRadius="18dp"
        app:chipStrokeWidth="0dp"
        app:chipBackgroundColor="@color/colorPrimary"
        app:textStartPadding="8dp"
        app:textEndPadding="8dp"
    app:chipMinHeight="28dp"
    app:chipMinTouchTargetSize="0dp"
    style="@style/Widget.MaterialComponents.Chip.Choice"
    tools:text="All" />

    <com.google.android.material.chip.Chip
        android:id="@+id/tab_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"    
        android:text="@string/groups"
        android:textSize="13sp"
        android:minHeight="28dp"
        android:textColor="@color/fontAppbar"
        android:textAlignment="center"
        app:chipCornerRadius="18dp"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/colorPrimary"
        app:chipBackgroundColor="@color/colorSecondaryLight"
        app:textStartPadding="8dp" 
        app:textEndPadding="8dp"   
        app:chipMinHeight="28dp"
        app:chipMinTouchTargetSize="0dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        tools:text="Groups" />

    <com.google.android.material.chip.Chip
        android:id="@+id/tab_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"   
        android:text="@string/unread"
        android:textSize="13sp"
        android:minHeight="28dp"
        android:textColor="@color/fontAppbar"
        android:textAlignment="center"
        app:chipCornerRadius="18dp"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/colorPrimary"
        app:chipBackgroundColor="@color/colorSecondaryLight"
        app:textStartPadding="8dp" 
        app:textEndPadding="8dp"   
        app:chipMinHeight="28dp"
        app:chipMinTouchTargetSize="0dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        tools:text="Unread" />

    <com.google.android.material.chip.Chip
        android:id="@+id/tab_archived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"   
        android:text="@string/archived"
        android:textSize="13sp"
        android:minHeight="28dp"
        android:textColor="@color/fontAppbar"
        android:textAlignment="center"
        app:chipCornerRadius="18dp"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/colorPrimary"
        app:chipBackgroundColor="@color/colorSecondaryLight"
        app:textStartPadding="8dp" 
        app:textEndPadding="8dp"   
        app:chipMinHeight="28dp"
        app:chipMinTouchTargetSize="0dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        tools:text="Archived" />

    <com.google.android.material.chip.Chip
        android:id="@+id/tab_calls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp" 
        android:text="@string/calls"
        android:textSize="13sp"
        android:minHeight="28dp"
        android:textColor="@color/fontAppbar"
        android:textAlignment="center"
        app:chipCornerRadius="18dp"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/colorPrimary"
        app:chipBackgroundColor="@color/colorSecondaryLight"
        app:textStartPadding="8dp"  
        app:textEndPadding="8dp" 
        app:chipMinHeight="28dp"
        app:chipMinTouchTargetSize="0dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        tools:text="Calls" />

</LinearLayout>

</HorizontalScrollView>
