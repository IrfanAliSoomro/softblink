    <!-- Centered Icon -->
    <ImageView
        android:id="@+id/centerIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/nc_app_product_name"
        android:scaleType="fitCenter" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Connecting to your secure server... 🔐"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLines="3"
        android:visibility="gone"
        android:padding="24dp" />

    <!-- Network Warning Banner -->
    <LinearLayout
        android:id="@+id/networkWarningBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/grey"
        android:padding="16dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_signal_wifi_off_white_24dp"
            android:contentDescription="No Internet"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Internet required for login. Please check your connection."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:textColor="@android:color/white"
            android:minHeight="36dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
