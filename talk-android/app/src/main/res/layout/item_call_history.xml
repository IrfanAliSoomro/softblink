<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/rounded_background"
    android:layout_marginStart="@dimen/margin_between_elements"
    android:layout_marginEnd="@dimen/margin_between_elements"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <!-- Profile Picture/Avatar -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/account_circle_48dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/account_circle_48dp" />

    <!-- Contact Name and Call Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fontAppbar"
            tools:text="hassan-mehmood" />

        <!-- Call Status and Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- Call Status Icon -->
            <ImageView
                android:id="@+id/call_status_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_call_received"
                android:tint="@color/nc_darkGreen"
                tools:src="@drawable/ic_call_received"
                tools:tint="@color/nc_darkGreen" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/call_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/fontAppbar"
                tools:text="6 Feb, 07:53 PM" />

        </LinearLayout>

    </LinearLayout>

    <!-- Phone Action Icon -->
    <ImageView
        android:id="@+id/phone_action_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_call_grey_600_24dp"
        android:tint="@color/fontAppbar"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        tools:src="@drawable/ic_call_grey_600_24dp" />

</LinearLayout>
