<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/createThreadView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/threadIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:contentDescription="@null"
        android:padding="12dp"
        android:src="@drawable/outline_forum_24"
        app:tint="@color/grey_600">

    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createThreadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thread_title"
            android:textColor="@color/grey_600" />

        <com.nextcloud.talk.utils.EmojiTextInputEditText
            android:id="@+id/createThread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textUri"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="@color/high_emphasis_text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/abortCreateThread"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/thread_cancel"
        android:gravity="top|end"
        android:padding="12dp"
        android:src="@drawable/ic_clear_24" />

</LinearLayout>
